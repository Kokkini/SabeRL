{
  "name": "saber-arena",
  "version": "1.0.0",
  "description": "Browser-based 2D arena combat game with rotating sabers",
  "main": "src/main.js",
  "scripts": {
    "start": "node server.js",
    "dev": "live-server . --port=8383 --open=/public/index.html",
    "dev:dist": "live-server dist --port=8384 --open=/index.html",
    "serve": "node server.js public",
    "serve:dist": "node server.js dist",
    "test": "jest",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "build": "npm run build:copy && npm run build:ts && npm run build:minify",
    "build:ts": "tsc",
    "build:copy": "node scripts/build-copy.js",
    "build:minify": "npm run build:minify:js",
    "build:minify:js": "echo 'Minification would go here - using terser or similar'",
    "deploy": "npm run build && npm run deploy:gh-pages",
    "deploy:gh-pages": "gh-pages -d dist"
  },
  "keywords": [
    "game",
    "browser",
    "canvas",
    "2d",
    "arena",
    "combat"
  ],
  "author": "SabeRL Team",
  "license": "MIT",
  "dependencies": {
    "@tensorflow/tfjs-core": "^4.15.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.25",
    "eslint": "^8.0.0",
    "gh-pages": "^6.0.0",
    "jest": "^29.0.0",
    "live-server": "^1.2.2",
    "prettier": "^3.0.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
